<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Mavgento\Custombanner\Block\Custombanner" name="custombanner.customer.content.top" before="-">
            	<action method="setPosition">
            		<argument name="position" xsi:type="string">customer-content-top</argument>
            	</action>
            </block>
        </referenceContainer>
        <referenceContainer name="sidebar.main">
            <block class="Mavgento\Custombanner\Block\Custombanner" name="custombanner.sidebar.main.top" before="-">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">customer-sidebar-main-top</argument>
                </action>
            </block>
            <block class="Mavgento\Custombanner\Block\Custombanner" name="custombanner.sidebar.main.bottom">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">customer-sidebar-main-bottom</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
