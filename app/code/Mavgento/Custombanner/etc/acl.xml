<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
	<acl>
	    <resources>
	        <resource id="Magento_Backend::admin">
	        	<resource id="Mavgento_Custombanner::custombanner" title="Custom banner" sortOrder="10">
	        	    <resource id="Mavgento_Custombanner::custombanner_custombanner" title="Custom banner" sortOrder="10">
	        	        <resource id="Mavgento_Custombanner::custombanner_sliders" title="Manage Sliders" sortOrder="10" />
	        	        <resource id="Mavgento_Custombanner::custombanner_banners" title="Manage Banners" sortOrder="10" />
	        	        <resource id="Mavgento_Custombanner::custombanner_coreslider" title="Preview Slider Styles" sortOrder="10" />
	        	        <resource id="Mavgento_Custombanner::custombanner_reports" title="Reports" sortOrder="10" >
	        	            <resource id="Mavgento_Custombanner::custombanner_reports_perslider" title="Reports Per Slider" sortOrder="10" />
	        	            <resource id="Mavgento_Custombanner::custombanner_reports_allslider" title="Reports All Sliders" sortOrder="10" />
	        	        </resource>
	        	        <resource id="Mavgento_Custombanner::settings" title="Settings" sortOrder="20" />
	        	    </resource>
	        	</resource>
	            <resource id="Magento_Backend::stores">
	                <resource id="Magento_Backend::stores_settings">
	                    <resource id="Magento_Config::config">
	                        <resource id="Mavgento_Custombanner::config_custombanner" title="Banner Slider" />
	                    </resource>
	                </resource>
	            </resource>
	        </resource>
	    </resources>
	</acl>
</config>
